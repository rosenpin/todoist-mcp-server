{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": [
      "ES2022"
    ],
    "types": [
      "@cloudflare/workers-types"
    ]
  },
  "exclude": [
    "node_modules",
    "public/**/*",
    "scripts/**/*"
  ]
}