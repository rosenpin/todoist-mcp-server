// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
    "name": "Python 3",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    "image": "mcr.microsoft.com/devcontainers/python:1-3.13-bullseye",
    "features": {
        "ghcr.io/va-h/devcontainers-features/uv:1": {},
        "ghcr.io/devcontainers-extra/features/curl-apt-get:1": {},
        "ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {},
        "ghcr.io/devcontainers-extra/features/actions-runner:1": {},
        "ghcr.io/devcontainers-extra/features/mypy:2": {},
        "ghcr.io/jsburckhardt/devcontainer-features/ruff:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
        "ghcr.io/devcontainers/features/aws-cli:1": {},
        "ghcr.io/devcontainers-extra/features/aws-cdk:2": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,readonly"
    ],
    "postStartCommand": "sudo apt-get update && npm install -g @anthropic-ai/claude-code",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
                "python.testing.pytestEnabled": true,
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit",
                        "source.fixAll": "explicit"
                    }
                }
            },
            "extensions": [
                "ms-python.python",
                "ms-python.pylance",
                "ms-python.debugpy",
                "charliermarsh.ruff",
                "ms-python.mypy-type-checker",
                "github.vscode-github-actions",
                "ms-azuretools.vscode-docker",
                "tamasfe.even-better-toml",
                "redhat.vscode-yaml"
            ]
        }
    }
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],
    // Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "pip3 install --user -r requirements.txt",
    // Configure tool-specific properties.
    // "customizations": {},
    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    // "remoteUser": "root"
}